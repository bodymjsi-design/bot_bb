        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #fff;
            text-align: center;
            padding: 20px;
        }
        h1 {
            color: #00ffcc;
        }
        .bot-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }
        .bot-card {
            background-color: #1e1e1e;
            border-radius: 15px;
            padding: 20px;
            width: 350px;
            text-align: right;
            border: 3px solid #00ffcc;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .bot-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 25px #00ffcc;
        }
        .bot-title {
            font-size: 22px;
            margin-bottom: 10px;
            color: #ffcc00;
        }
        .command {
            background-color: #222;
            margin: 3px 0;
            padding: 5px;
            border-radius: 5px;
            text-align: left;
        }
        .section-title {
            color: #ffcc00;
            margin: 10px 0 5px 0;
            font-weight: bold;
        }
        .buy-button {
            background: linear-gradient(90deg, #ffcc00, #ff5500);
            color: #000;
            font-size: 18px;
            font-weight: bold;
            padding: 12px 25px;
            border-radius: 12px;
            border: none;
            cursor: pointer;
            margin-top: 10px;
            transition: transform 0.2s;
        }
        .buy-button:hover {
            transform: scale(1.05);
        }
        a {
            color: #00ffcc;
